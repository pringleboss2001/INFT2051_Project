<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="INFT2051_Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:INFT2051_Project"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="INFT2051_Project">

    <FlyoutItem
        Title="Home Page"
        FlyoutDisplayOptions="AsMultipleItems">
        
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
            Icon="flyout_home_image.PNG"/>

        <ShellContent
            Title="One Step Equations"
            ContentTemplate="{DataTemplate local:OneStep}"
            Route="OneStep"/>

        <ShellContent
            Title="Two Step Equations"
            ContentTemplate="{DataTemplate local:TwoStep}"
            Route="TwoStep"/>

    </FlyoutItem>

</Shell>
