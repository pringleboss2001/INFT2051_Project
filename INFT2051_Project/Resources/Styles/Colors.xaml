<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <!-- Primary Color Palette -->
    <Color x:Key="PrimaryBlue">#3B82F6</Color> <!-- Bright Blue -->
    <Color x:Key="PrimaryDarkBlue">#1E3A8A</Color> <!-- Darker Blue for Contrast -->
    <Color x:Key="SecondaryLightBlue">#93C5FD</Color> <!-- Light Blue for Accent -->
    <Color x:Key="PrimaryText">#FFFFFF</Color> <!-- White for text contrast -->
    <Color x:Key="SecondaryText">#E5E7EB</Color> <!-- Light Gray for Secondary Text -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundLight">#e8fffa</Color> <!-- Soft Blue Background -->
    <Color x:Key="BackgroundDark">#1E40AF</Color> <!-- Dark Blue Background for Dark Mode -->
    <Color x:Key="CardBackground">#F8FAFC</Color> <!-- Light Card Background -->
    
    <!-- Accent Colors -->
    <Color x:Key="CorrectAnswerGreen">#22C55E</Color> <!-- Green for correct answers -->
    <Color x:Key="WrongAnswerRed">#EF4444</Color> <!-- Red for wrong answers -->

</ResourceDictionary>