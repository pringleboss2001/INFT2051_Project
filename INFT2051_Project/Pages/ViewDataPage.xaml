<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="INFT2051_Project.Pages.ViewDataPage"
             Title="ViewDataPage">
    <VerticalStackLayout>
        <Label 
            Text="Data Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout>
            <CollectionView x:Name="MyCollView" ItemsSource="{Binding TopicData}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            Padding="10"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Label Text="{Binding TopicName}" VerticalOptions="Center"/>
                            <Label Text="{Binding TotalQuestionsAttempted}" VerticalOptions="Center"/>
                            <Label Text="{Binding TotalQuestionsCorrect}" VerticalOptions="Center"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>