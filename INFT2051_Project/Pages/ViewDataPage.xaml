<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INFT2051_Project.Pages.ViewDataPage"
             xmlns:cal="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
             Title="ViewDataPage">
    <ScrollView>
        <VerticalStackLayout>
            <ListView x:Name="listView" Background="AliceBlue">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout 
                                Padding="10">
                                <Label Text="{Binding TopicName}" FontAttributes="Bold" FontSize="20" TextDecorations="Underline"/>
                                <HorizontalStackLayout>
                                    <Label Text="Total Questions Attempted: "/>
                                    <Label Text="{Binding TotalQuestionsAttempted}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <Label Text="Total Questions Correct: "/>
                                    <Label Text="{Binding TotalQuestionsCorrect}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <Label Text="Percentage of Correct Answers: "/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <cal:Calendar
                x:Name="dataCalender"
                SelectedDateColor="black"
                SelectedDayBackgroundColor="black"
                Padding="5"
                Events="{Binding UserActivity}"
                EventIndicatorColor="Black">
                <cal:Calendar.EventTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Label Text="Question Correct Today: "/>
                            <Label Text="{Binding answeredQuestion}"/>
                        </VerticalStackLayout>
                </DataTemplate>
                </cal:Calendar.EventTemplate>
             </cal:Calendar>

        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>